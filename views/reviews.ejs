<h1>Reviews</h1>

<div class="">
    <form action="/reviews" method="post">
      <h4>Review Us Today!</h4>
      <div class="form-group">
        <label for="control-label">First Name</label>
        <input name="firstName" id="firstName" placeholder="First Name" class="form-control"  type="text">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Last Name</label>
        <input name="lastName" id="lastName" placeholder="Last Name" class="form-control"  type="text">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Review</label>
        <input name="review" id="review" placeholder="Review" class="form-control"  type="text">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Score</label>
        <select name="score">
  			<option value="1">1</option> 
  			<option value="2">2</option>
  			<option value="3">3</option>
  			<option value="4">4</option>
  			<option value="5" selected>5</option>
		</select>
       <div class="col-md-4 button-form">
        <button type="submit" id="contactSubmit" class="btn btn-warning" >Send <span class="glyphicon glyphicon-send"></span></button>
      </div>
      </div>
    </form>
 </div>

<div class="list-group">
  <!-- loop over blog posts and render them -->
  <% reviews.forEach((review) => { %>
    <div class="review-post list-group-item">
      <h4 class="list-group-item-heading"><%= review.firstName %></h4>
      <p class="list-group-item-text">Author: <%= review.lastName %></p>
      <p class="list-group-item-text"><br><%= review.review %></p>
      <p class="list-group-item-text"><br><%= review.score %></p>
      <p class="list-group-item-text"><br><%= review.date %></p>
     </div>
  <% }) %>
</div>
