<%- include('base-header') %>

<div>
	<h1>We're Loged In</h1>
</div>	
<div class="container">
  <div class="row">
    <div class="col-md-6 list-group">
      <h2>Reviews</h2>
      <% reviews.forEach((review) => { %>
        <div class="review-post list-group-item">
          <p class="list-group-item-text">Author: <%= review.firstName %> <%= review.lastName %></p>
          <p class="list-group-item-text"><%= review.review %></p>
          <p class="list-group-item-text"><%= review.score %></p>
          <p class="list-group-item-text"><%= review.date %></p>
          <p class="list-group-item-text"><%= review.approved %></p>
          <% if(review.approved){ %>
            <a href="/unapprove-reviews/<%= review._id %>" class="approve-button">Unapprove</a>
          <% } else{ %>
            <a href="/approve-reviews/<%= review._id %>" class="approve-button">Approve</a>
          <% } %>
         </div>
      <% }) %>
    </div>
    
    <% if (leads){ %>
      <div class="col-md-6 list-group">
        <h2>Leads</h2>
        <% leads.forEach((lead) => { %>
          <div class="lead-post list-group-item">
            <p class="list-group-item-text">Author: <%= lead.firstName %> <%= lead.lastName %></p>
            <p class="list-group-item-text"><%= lead.email %></p>
            <p class="list-group-item-text"><%= lead.phone %></p>
            <p class="list-group-item-text"><%= lead.repair %></p>
            <p class="list-group-item-text"><%= lead.fenceType %></p>
            <p class="list-group-item-text"><%= lead.dateCompleted %></p>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div> 
</div>



<script type="text/javascript" src="/js/admin.js"></script>